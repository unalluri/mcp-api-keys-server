# ===========================================
# MCP API Keys Server - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!
# ===========================================

# -----------------
# LLM APIs
# -----------------
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here
COHERE_API_KEY=your-cohere-key-here

# -----------------
# SaaS APIs
# -----------------
# Stripe
STRIPE_API_KEY=sk_test_your-stripe-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Twilio
TWILIO_ACCOUNT_SID=AC-your-account-sid-here
TWILIO_AUTH_TOKEN=your-auth-token-here

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-key-here

# AWS
AWS_ACCESS_KEY_ID=AKIA-your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-access-key-here

# -----------------
# Canva APIs
# -----------------
CANVA_CLIENT_ID=your-canva-client-id
CANVA_CLIENT_SECRET=your-canva-client-secret
CANVA_APP_ID=your-canva-app-id

# -----------------
# Internal/Custom
# -----------------
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
REDIS_URL=redis://localhost:6379
JWT_SECRET=your-super-secret-jwt-key
APP_SECRET=your-app-secret-key
